<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SecondaryController">
    <padding>
        <Insets top="20" bottom="20" right="20" left="20"></Insets>
    </padding>
    <HBox>
        <Label text="pizza :"/>
        <ComboBox fx:id="typePizza" promptText="choisir"></ComboBox>
    </HBox>
    <HBox>
        <Label text="Suplements" />
        <CheckBox fx:id="Fromage" text="Fromage(+5Dt)"/>
        <CheckBox fx:id="Jambon" text="Jambon(+3Dt)"/>
        <CheckBox fx:id="Saumon" text="Saumon(+8Dt)"/>
    </HBox>
    <HBox>
        <Label text="Coupon :"/>
        <TextField fx:id="Coupon"></TextField>
    </HBox>
    <HBox>
        <Button text="calculer" onAction="#calculer"/>
        <Label text="prix"></Label>
        <TextField fx:id="prix"></TextField>
    </HBox>
</VBox>
